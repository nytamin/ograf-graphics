{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "ticker-glassmorphism",
  "version": "1.0.0",
  "name": "Glassmorphism Ticker",
  "description": "A glassmorphism-style horizontal scrolling ticker for breaking news and headlines.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "ticker.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "headlines": {
        "type": "array",
        "title": "Headlines",
        "items": {
          "type": "string"
        },
        "default": [
          "üêæ Puppy breakthrough: Corgi solves skateboard mystery",
          "üêæ Golden Retriever sets new speed record on the snow",
          "üêæ Beagle's treat-stealing skills recognized worldwide!"
        ]
      },
      "category": {
        "type": "string",
        "title": "Category Label",
        "default": "Pup Stories"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "scrollSpeed": {
        "type": "number",
        "title": "Scroll Speed (px/s)",
        "default": 60,
        "minimum": 20,
        "maximum": 200
      }
    },
    "required": [
      "headlines"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
