{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "slab-glassmorphism",
  "version": "1.0.0",
  "name": "Glassmorphism Slab",
  "description": "A glassmorphism-style side panel for displaying vertical lists and rosters.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "slab.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "title": {
        "type": "string",
        "title": "Title",
        "default": "Pack Members"
      },
      "subtitle": {
        "type": "string",
        "title": "Subtitle",
        "default": "Dog News Crew"
      },
      "items": {
        "type": "array",
        "title": "List Items",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        },
        "default": [
          {
            "label": "Johan",
            "value": "Stream Master"
          },
          {
            "label": "Biscuit",
            "value": "Skateboard Pup"
          },
          {
            "label": "Max",
            "value": "Corgi Champion"
          },
          {
            "label": "Luna",
            "value": "Retriever Star"
          },
          {
            "label": "Bailey",
            "value": "Pug Legend"
          }
        ]
      },
      "position": {
        "type": "string",
        "title": "Position",
        "enum": [
          "left",
          "right"
        ],
        "default": "right",
        "gddType": "select",
        "gddOptions": {
          "labels": {
            "left": "Left",
            "right": "Right"
          }
        }
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    },
    "required": [
      "title",
      "items"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
