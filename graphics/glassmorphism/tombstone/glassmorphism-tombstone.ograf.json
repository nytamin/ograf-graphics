{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "tombstone-glassmorphism",
  "version": "1.0.0",
  "name": "Glassmorphism Tombstone",
  "description": "A glassmorphism-style tombstone for displaying quick facts and statistics.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "tombstone.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "header": {
        "type": "string",
        "title": "Header",
        "default": "PUP TRIVIA!"
      },
      "fact": {
        "type": "string",
        "title": "Fact",
        "default": "Dogs can understand around 250 words and can count up to 5!"
      },
      "source": {
        "type": "string",
        "title": "Source",
        "default": "Dog News Dog Facts"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    },
    "required": [
      "fact"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
