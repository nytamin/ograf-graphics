{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "goal-bar-material-design",
  "version": "1.0.0",
  "name": "Material Design Goal Bar",
  "description": "A progress bar for tracking subscription and donation goals using Material Design. Displays current progress with animated fills and milestone celebrations.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "goal-bar.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "goalTitle": {
        "type": "string",
        "title": "Goal Title",
        "default": "Dog Treats Goal"
      },
      "currentProgress": {
        "type": "number",
        "title": "Current Progress",
        "default": 238
      },
      "maxProgress": {
        "type": "number",
        "title": "Goal Target",
        "default": 500
      },
      "unit": {
        "type": "string",
        "title": "Progress Unit",
        "default": "treats"
      },
      "position": {
        "type": "string",
        "title": "Position",
        "default": "top",
        "enum": [
          "top",
          "bottom"
        ],
        "gddType": "select",
        "gddOptions": {
          "labels": {
            "top": "Top",
            "bottom": "Bottom"
          }
        }
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ffd700",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-fA-F]{6}$"
      }
    }
  }
}
