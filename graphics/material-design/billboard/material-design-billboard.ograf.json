{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "billboard-material-design",
  "version": "1.0.0",
  "name": "Material Design Billboard",
  "description": "A Material Design full-screen billboard with layered surfaces and dramatic elevation for sponsorship and promotional content.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "billboard.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "headline": {
        "type": "string",
        "title": "Headline",
        "default": "Dachshund's Great Escape!"
      },
      "subheadline": {
        "type": "string",
        "title": "Subheadline",
        "default": "Local pup goes on unexpected adventure"
      },
      "sponsor": {
        "type": "string",
        "title": "Sponsor Text",
        "default": "Brought to you by Dog News"
      },
      "showSponsor": {
        "type": "boolean",
        "title": "Show Sponsor",
        "default": true
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#1a1a1a",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "scrimOpacity": {
        "type": "number",
        "title": "Background Scrim Opacity",
        "default": 0.85,
        "gddType": "percentage",
        "minimum": 0,
        "maximum": 1
      }
    },
    "required": [
      "headline"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
