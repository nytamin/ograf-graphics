{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "multi-step-news-material-design",
  "version": "1.0.0",
  "name": "Material Design Multi-Step News",
  "description": "A multi-step news graphic using Material Design principles. Displays a breaking news story with headline, story details, expert commentary, and call to action across 4 sequential steps.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "multi-step-news.js",
  "supportsRealTime": true,
  "supportsNonRealTime": true,
  "stepCount": 4,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "step1Headline": {
        "type": "string",
        "title": "Step 1: Headline",
        "default": "üêï BREAKING PAWS"
      },
      "step1Title": {
        "type": "string",
        "title": "Step 1: Title",
        "default": "Corgi Wins Golden Skateboard Championship"
      },
      "step2Title": {
        "type": "string",
        "title": "Step 2: Story Title",
        "default": "The Details"
      },
      "step2Details": {
        "type": "array",
        "title": "Step 2: Details",
        "items": {
          "type": "string"
        },
        "default": [
          "A fearless Corgi named Biscuit conquered 5 trick obstacles",
          "Defeated 47 other pups in tail-blazing stunts",
          "Crowd went absolutely bonkers! üéâ"
        ]
      },
      "step3Title": {
        "type": "string",
        "title": "Step 3: Expert Title",
        "default": "Johan's Take"
      },
      "step3Quote": {
        "type": "string",
        "title": "Step 3: Quote",
        "default": "\"I've never seen a dog move like that! Biscuit is pure legend on four wheels!\""
      },
      "step3Expert": {
        "type": "string",
        "title": "Step 3: Expert Name",
        "default": "Johan Nyman, Dog News"
      },
      "step4Title": {
        "type": "string",
        "title": "Step 4: CTA Title",
        "default": "Watch It Live"
      },
      "step4Text": {
        "type": "string",
        "title": "Step 4: CTA Text",
        "default": "Tune in next week at twitch.tv/johan_nyman for more epic dog shenanigans. Follow @DogNews for daily pup updates!"
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ffd700"
      },
      "step1Icon": {
        "type": "string",
        "title": "Step 1: Icon Type",
        "default": "alert",
        "enum": ["alert", "chart", "globe"]
      },
      "step2Icon": {
        "type": "string",
        "title": "Step 2: Icon Type",
        "default": "chart",
        "enum": ["alert", "chart", "globe"]
      },
      "step3Icon": {
        "type": "string",
        "title": "Step 3: Icon Type",
        "default": "globe",
        "enum": ["alert", "chart", "globe"]
      },
      "step4Icon": {
        "type": "string",
        "title": "Step 4: Icon Type",
        "default": "check",
        "enum": ["check", "link", "people"]
      }
    }
  }
}
