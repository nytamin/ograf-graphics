{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "slab-material-design",
  "version": "1.0.0",
  "name": "Material Design Slab",
  "description": "A Material Design side panel with card elevation for displaying vertical lists of information.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "slab.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "title": {
        "type": "string",
        "title": "Title",
        "default": "Top Pup Stories"
      },
      "items": {
        "type": "array",
        "title": "List Items",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "label"
          ]
        },
        "default": [
          {
            "label": "Corgi Win",
            "value": "Skateboard Championship trophy"
          },
          {
            "label": "Dachshund News",
            "value": "Great escape adventure ongoing"
          },
          {
            "label": "Johan's Update",
            "value": "Next stream this Saturday"
          }
        ]
      },
      "position": {
        "type": "string",
        "title": "Position",
        "enum": [
          "left",
          "right"
        ],
        "gddType": "select",
        "gddOptions": {
          "labels": {
            "left": "Left",
            "right": "Right"
          }
        },
        "default": "left"
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "surfaceColor": {
        "type": "string",
        "title": "Surface Color",
        "default": "#ffffff",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    },
    "required": [
      "title",
      "items"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
