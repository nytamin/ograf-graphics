{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "offline-screen-material-design",
  "version": "1.0.0",
  "name": "Material Design Offline Screen",
  "description": "A full-screen offline graphic using Material Design. Displays when the stream is not live, featuring countdown to next stream, recent highlights, and social media links.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "offline-screen.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "channelName": {
        "type": "string",
        "title": "Channel Name",
        "default": "Dog News"
      },
      "offlineText": {
        "type": "string",
        "title": "Offline Message",
        "default": "Johan's Pups Are Napping"
      },
      "nextStreamTime": {
        "type": "string",
        "title": "Next Stream Time",
        "default": "Next stream: Saturday 7 PM GMT with bonus doggo clips!"
      },
      "callToAction": {
        "type": "string",
        "title": "Call to Action",
        "default": "Hit that follow button to get notified when the pups wake up!"
      },
      "socialLinks": {
        "type": "array",
        "title": "Social Media Links",
        "items": {
          "type": "string"
        },
        "default": [
          "@DogNews",
          "discord.gg/dognews",
          "twitch.tv/johan_nyman"
        ]
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#1a1a1a",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    }
  }
}
