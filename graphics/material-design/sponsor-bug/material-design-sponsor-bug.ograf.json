{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "sponsor-bug-material-design",
  "version": "1.0.0",
  "name": "Material Design Sponsor Bug",
  "description": "A rotating sponsor logo display using Material Design. Displays sponsor branding in a corner of the screen with smooth transitions between sponsors.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "sponsor-bug.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "sponsors": {
        "type": "array",
        "title": "Sponsor List",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "duration": {
              "type": "number"
            }
          }
        },
        "default": [
          {
            "name": "Puppy Power Treats",
            "duration": 5
          },
          {
            "name": "Bark & Stream Co",
            "duration": 5
          },
          {
            "name": "Johan's Dog Gear",
            "duration": 5
          }
        ]
      },
      "position": {
        "type": "string",
        "title": "Position",
        "default": "bottom-right",
        "enum": [
          "top-left",
          "top-right",
          "bottom-left",
          "bottom-right"
        ],
        "gddType": "select",
        "gddOptions": {
          "labels": {
            "top-left": "Top Left",
            "top-right": "Top Right",
            "bottom-left": "Bottom Left",
            "bottom-right": "Bottom Right"
          }
        }
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#1a1a1a",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    }
  }
}
