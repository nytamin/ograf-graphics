{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "alert-widget-material-design",
  "version": "1.0.0",
  "name": "Material Design Alert Widget",
  "description": "An animated alert widget using Material Design. Triggered by follows, subscriptions, donations, and raids with customizable messages and animations.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "alert-widget.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "alertType": {
        "type": "string",
        "title": "Alert Type",
        "default": "follow",
        "enum": [
          "follow",
          "subscribe",
          "bits",
          "raid"
        ],
        "gddType": "select",
        "gddOptions": {
          "labels": {
            "follow": "Follow",
            "subscribe": "Subscribe",
            "bits": "Bits",
            "raid": "Raid"
          }
        }
      },
      "userName": {
        "type": "string",
        "title": "User Name",
        "default": "DogLoverMax"
      },
      "message": {
        "type": "string",
        "title": "Alert Message",
        "default": "just followed the pack! üêæ"
      },
      "displayDuration": {
        "type": "number",
        "title": "Display Duration (seconds)",
        "default": 5
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ffd700",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    }
  }
}
