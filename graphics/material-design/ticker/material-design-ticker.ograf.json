{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "ticker-material-design",
  "version": "1.0.0",
  "name": "Material Design Ticker",
  "description": "A Material Design horizontal scrolling ticker with elevation shadows for breaking news and headlines.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "ticker.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "headlines": {
        "type": "array",
        "title": "Headlines",
        "items": {
          "type": "string"
        },
        "default": [
          "üêæ Breaking: Golden Retriever sets new skateboard speed record",
          "üêæ Local Corgi declares independence from obedience training",
          "üêæ Beagle's legendary picnic heist finally solved!"
        ]
      },
      "category": {
        "type": "string",
        "title": "Category Label",
        "default": "Pup News"
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#1a1a1a"
      },
      "scrollSpeed": {
        "type": "number",
        "title": "Scroll Speed (px/s)",
        "default": 60,
        "minimum": 20,
        "maximum": 200
      }
    },
    "required": ["headlines"]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": { "ideal": 1920 },
        "height": { "ideal": 1080 }
      },
      "frameRate": { "ideal": 50 },
      "accessToPublicInternet": { "ideal": false }
    }
  ]
}
