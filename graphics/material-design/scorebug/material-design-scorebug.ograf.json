{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "scorebug-material-design",
  "version": "1.0.0",
  "name": "Material Design Scorebug",
  "description": "A Material Design scoreboard overlay with elevation and layered surfaces for sports broadcasts.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "scorebug.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "homeTeam": {
        "type": "object",
        "title": "Home Team",
        "properties": {
          "name": {
            "type": "string",
            "default": "Team Biscuit"
          },
          "abbreviation": {
            "type": "string",
            "default": "BIS"
          },
          "score": {
            "type": "number",
            "default": 7
          }
        },
        "required": [
          "name",
          "score"
        ]
      },
      "awayTeam": {
        "type": "object",
        "title": "Away Team",
        "properties": {
          "name": {
            "type": "string",
            "default": "Team Corgi"
          },
          "abbreviation": {
            "type": "string",
            "default": "COR"
          },
          "score": {
            "type": "number",
            "default": 5
          }
        },
        "required": [
          "name",
          "score"
        ]
      },
      "clock": {
        "type": "string",
        "title": "Game Clock",
        "default": "02:34"
      },
      "period": {
        "type": "string",
        "title": "Period/Quarter",
        "default": "2nd Paw"
      },
      "showClock": {
        "type": "boolean",
        "title": "Show Clock",
        "default": true
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#1a1a1a",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    },
    "required": [
      "homeTeam",
      "awayTeam"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
