{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "starting-soon-material-design",
  "version": "1.0.0",
  "name": "Material Design Starting Soon",
  "description": "A starting soon screen with countdown and social rotator styling based on Material Design.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "starting-soon.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "showTitle": {
        "type": "string",
        "title": "Show Title",
        "default": "Dog News - Dog Edition"
      },
      "countdownTarget": {
        "type": "number",
        "title": "Countdown Target (Unix Timestamp)",
        "default": 1739799600
      },
      "subtitle": {
        "type": "string",
        "title": "Subtitle",
        "default": "Hosted by Johan Nyman - Pups, laughs & live chaos incoming!"
      },
      "socials": {
        "type": "array",
        "title": "Social Handles",
        "items": {
          "type": "string"
        },
        "default": [
          "@DogNews",
          "discord.gg/dognews",
          "twitch.tv/johan_nyman"
        ]
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#1a1a1a",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      }
    }
  }
}
