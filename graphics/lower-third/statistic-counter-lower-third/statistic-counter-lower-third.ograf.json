{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "lower-third-statistic-counter",
  "version": "1.0.0",
  "name": "Statistic Counter Lower Third",
  "description": "Lower-third that displays a single-number statistic and animates from 0 to the target value on in-animation.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "lower-third.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "label": {
        "type": "string",
        "title": "Label",
        "default": "Bridge Fasteners"
      },
      "value": {
        "type": "number",
        "title": "Value",
        "default": 13240
      },
      "unit": {
        "type": "string",
        "title": "Unit",
        "default": "nails"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#00C2FF",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "backgroundOpacity": {
        "type": "number",
        "title": "Background Opacity",
        "default": 0.2,
        "gddType": "percentage",
        "minimum": 0,
        "maximum": 1
      },
      "durationMs": {
        "type": "integer",
        "title": "Count-up Duration (ms)",
        "default": 1200,
        "gddType": "duration-ms",
        "minimum": 200,
        "maximum": 10000
      }
    },
    "required": [
      "value"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
