{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "lower-third-shadow-text",
  "version": "1.0.0",
  "name": "Shadow Text Lower Third",
  "description": "A minimalist lower third with animated text and shadow effects only - no background surfaces.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "lower-third.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "title": {
        "type": "string",
        "title": "Title",
        "default": "Bella the Golden Retriever"
      },
      "subtitle": {
        "type": "string",
        "title": "Subtitle",
        "default": "Dog News Sensation"
      },
      "textColor": {
        "type": "string",
        "title": "Text Color",
        "default": "#ffffff",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "shadowColor": {
        "type": "string",
        "title": "Shadow Color",
        "default": "#1a1a1a",
        "gddType": "color-rrggbb",
        "pattern": "^#[0-9a-f]{6}$"
      },
      "shadowIntensity": {
        "type": "number",
        "title": "Shadow Intensity",
        "default": 0.9,
        "gddType": "percentage",
        "minimum": 0,
        "maximum": 1
      }
    },
    "required": [
      "title"
    ]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": {
          "ideal": 1920
        },
        "height": {
          "ideal": 1080
        }
      },
      "frameRate": {
        "ideal": 50
      },
      "accessToPublicInternet": {
        "ideal": false
      }
    }
  ]
}
