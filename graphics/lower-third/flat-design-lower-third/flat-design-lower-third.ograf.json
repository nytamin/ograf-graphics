{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "lower-third-material-design",
  "version": "1.0.0",
  "name": "Material Design Lower Third",
  "description": "A Material Design lower-third with elevation, shadows, and layered surfaces for broadcast.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "lower-third.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "default": "Max the Corgi"
      },
      "title": {
        "type": "string",
        "title": "Title",
        "default": "Skateboard Champion"
      },
      "location": {
        "type": "string",
        "title": "Location",
        "default": "Dog Park, Stockholm"
      },
      "showLocation": {
        "type": "boolean",
        "title": "Show Location",
        "default": true
      },
      "isLive": {
        "type": "boolean",
        "title": "Show LIVE Bug",
        "default": true
      },
      "primaryColor": {
        "type": "string",
        "title": "Primary Color",
        "default": "#ff8c00"
      },
      "accentColor": {
        "type": "string",
        "title": "Accent Color",
        "default": "#ffd700"
      }
    },
    "required": ["name", "title"]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": { "ideal": 1920 },
        "height": { "ideal": 1080 }
      },
      "frameRate": { "ideal": 50 },
      "accessToPublicInternet": { "ideal": false }
    }
  ]
}
